<service>
  <id>WorkqueueService</id>
  <name>WorkqueueService - Python 3.13 Service</name>
  <description>WorkqueueService as a Windows Service using WinSW.</description>

  <executable>C:\Python_repos\MBU_Udskrivning_22_aar_Service\.venv\Scripts\python.exe</executable>
  <arguments>C:\Python_repos\MBU_Udskrivning_22_aar_Service\service.py</arguments>
